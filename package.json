{
  "name": "basic",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:preview": "vite preview",
    "build:html": "vite build --mode client && vite build",
    "build:css": "npx @tailwindcss/cli@latest -i ./app/style.css -o ./dist/static/style.css --minify",
    "build": "npm run build:html && npm run build:css",
    "build:pdf": "md-to-pdf docs/README.md",
    "ssg": "npm run build && npm run build:css && npm run dev:preview",
    "preview": "wrangler dev",
    "deploy": "npm run build && wrangler deploy"
  },
  "private": true,
  "dependencies": {
    "@hono/vite-ssg": "^0.1.2",
    "hono": "^4.7.11",
    "honox": "^0.1.40",
    "md-to-pdf": "^5.2.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250214.0",
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/vite": "^4.0.9",
    "tailwindcss": "^4.0.9",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
